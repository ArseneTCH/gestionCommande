{% extends 'base.html.twig' %}

{% block title %}Complement index{% endblock %}

{% block body %}
    <h1>Complement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for complement in complements %}
            <tr>
                <td>{{ complement.id }}</td>
                <td>{{ complement.nom }}</td>
                <td>{{ complement.prix }}</td>
                <td>
                    <a href="{{ path('crud_complement_show', {'id': complement.id}) }}">show</a>
                    <a href="{{ path('crud_complement_edit', {'id': complement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_complement_new') }}">Create new</a>
{% endblock %}
