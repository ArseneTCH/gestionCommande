{% extends 'base.back.html.twig' %}

{% block title %}Edit Burger{% endblock %}

{% block content %}
    <h1>Edit Burger</h1>

    {{ include('BackEnd/crud_burger/_form.html.twig', {'button_label': 'Update'}) }}

    <div class="row">
            <div class="col-sm-2">
                <a href="{{ path('burger_management') }}">
                
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                      <span class="badge badge-primary"></span>
               </a>
            </div>

            <div class="col-sm-4 ml-3 mt-5">
               {#  {{ include('crud_burger/_delete_form.html.twig') }} #}
               
            </div>
    </div> 
    {% if app.request.attributes.get('_route') == 'burger_edit' %}
                    <h2>Images</h2>
                        {% for image in burgerSelect.images %}
                            <div class="row col-sm-3">
                            <a href="{{ path('burger_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">
                                <div >
                                    <img src="{{ asset('/uploads/' ~ image.nom) }}" alt="Image" width="150">
                                                                        
                                </div>
                            </a>
                             </div>
                        {% endfor %} 
				{% endif %}  
{% endblock %}
