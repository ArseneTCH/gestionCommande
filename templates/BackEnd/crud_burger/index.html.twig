{% extends 'base.html.twig' %}

{% block title %}Burger index{% endblock %}

{% block content %}
    <h1>Burger index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for burger in burgers %}
            <tr>
                <td>{{ burger.id }}</td>
                <td>{{ burger.nom }}</td>
                <td>{{ burger.prix }}</td>
                <td>
                    <a href="{{ path('crud_burger_show', {'id': burger.id}) }}">show</a>
                    <a href="{{ path('crud_burger_edit', {'id': burger.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_burger_new') }}">Create new</a>
{% endblock %}
